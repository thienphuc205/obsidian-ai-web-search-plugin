		const providerInfo = {
			gemini: {
				description: 'Google\'s most advanced AI model with multimodal capabilities',
				features: ['Web search with grounding', 'YouTube video analysis', 'Code generation', 'Image analysis'],
				pricing: 'Free tier available, pay-per-use',
